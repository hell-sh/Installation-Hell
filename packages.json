	{
		"name": "Configuration",
		"packages": [
			{
				"id": "hostname",
				"name": "Change Hostname",
				"input": "Change Hostname to",
				"lines": [
					"echo \"$HOSTNAME\" > /etc/hostname",
					"echo \"127.0.0.1 $HOSTNAME\" >> /etc/hosts",
					"echo \"::1 $HOSTNAME\" >> /etc/hosts",
					"hostname $HOSTNAME"
				]
			},
			{
				"id": "rootpw",
				"name": "Change Root Password",
				"input": "Change Root Password to",
				"lines": [
					"passwd root <<EOF",
					"$ROOTPW",
					"$ROOTPW",
					"EOF"
				]
			}
		]
	},
